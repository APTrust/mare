<%= simple_form_for(@institution) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
  </div>
  
  <div class="form-actions">
    <%= f.button :submit, "Submit", {class: "btn btn-success", type: "submit"} %>
    <%= show_link @institution, "Cancel" %>
  </div>

<% end %>
