<div class="page-header">
  <h1>APTrust Contributing Institutions</h1>
</div>

<table class="table table-condensed table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>PID</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @institutions.each do |institution| %>
      <tr>
        <td><%= institution.name %></td>
        <td><%= institution.pid %></td>
        <td><%= show_link institution %> <%= edit_link institution %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= create_link(Institution) %>
