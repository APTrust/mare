<div class="page-header">
  <h1><%= @institution.name %>
  <%= link_to 'Edit', edit_institution_path(@institution), class: 'btn btn-primary' %></h1>
</div>

<h3>Description Objects</h3>

<table class="table table-condensed table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>DPN Bound?</th>
      <th>Institution</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @description_objects.each do |description_object| %>
      <tr>
        <td><%= description_object.title %></td>
        <td><%= translate(description_object.dpn_status.to_bool.class) %></td>
        <td><%= description_object.institution.name %></td>
        <td><%= link_to 'Show', description_object_path(description_object), class: 'btn btn-primary' %> | <%= link_to 'Edit', edit_description_object_path(description_object), class: 'btn btn-warning' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h3>Users</h3>
<table class="table table-condensed table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user_path(user), class: 'btn btn-primary' %> | <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-warning' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

