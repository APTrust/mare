<div class="page-header">
  <h1><%= @institution.name %></h1>
  <%= edit_link @institution %> <%= show_link @institution.fedora_link, "Fedora Object", {target: "_blank", class: 'btn'} %>
</div>

<h3>Description Objects</h3>

<table class="table table-condensed table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>DPN Bound?</th>
      <th>Institution</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @description_objects.each do |description_object| %>
      <tr>
        <td><%= description_object.title %></td>
        <td><%= translate(description_object.dpn_status.to_bool.class) %></td>
        <td><%= description_object.institution.name %></td>
        <td><%= show_link description_object %> <%= edit_link description_object %> <%= show_link description_object.fedora_link, "Fedora Object", {target: "_blank", class: 'btn'} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h3>Users</h3>
<table class="table table-condensed table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= show_link user %> <%= edit_link user%></td>
      </tr>
    <% end %>
  </tbody>
</table>

