<div class="navbar navbar-inverse">
  <div class="navbar-inner">
    <a class="brand" href="#">APTrust Admin</a>
    <% if user_signed_in? %>
    <ul class="nav"> 
      <% if current_user.is? :superuser %>
        <li><%= link_to "Institutions", institutions_path %></li>
      <% end %>
      <li><%= link_to "Description Objects", description_objects_path %></li>
    </ul>

    <% end %>
    <ul class="nav pull-right">
      <li class="dropdown">
        <% if user_signed_in? %>
          <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.email %> (<%= current_user.institution.name %>) <b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li><%= link_to "Edit Profile", edit_user_registration_path(current_user) %></li>
            <li class="divider"></li>
            <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
          </ul>
        <% else %>
          <%= link_to "Sign in with Google", user_omniauth_authorize_path(:google_oauth2) %>
        <% end %>
      </li>
    </ul>
  </div>
</div>